<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="patient_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

    <record id="patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         <record id="action_patients" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first patient!
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem id="hospital_menu_root"
            name="Hospital"
            sequence="10"/>

        <menuitem id="hospital_patient_menu_root"
            name="Patients"
            parent="hospital_menu_root"
            sequence="10"/>

        <menuitem id="hospital_patient_menu"
            name="Patients"
            parent="hospital_patient_menu_root"
            action="action_patients"
            sequence="10"/>

</odoo>